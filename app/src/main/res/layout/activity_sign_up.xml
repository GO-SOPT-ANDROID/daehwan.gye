<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".external.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGNUP"

                android:layout_marginTop="100dp"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="ID"
                android:textSize="20sp"

                android:layout_marginEnd="100dp"
                android:layout_marginTop="50dp"

                app:layout_constraintTop_toBottomOf="@id/tv_head"
                app:layout_constraintEnd_toStartOf="@id/tv_head"

                />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디를 입력하세요"

                android:layout_marginHorizontal="50dp"

                app:layout_constraintTop_toBottomOf="@id/tv_id"
                />

            <TextView
                android:id="@+id/tv_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="80dp"
                android:text="PW"
                android:textSize="20sp"

                app:layout_constraintTop_toBottomOf="@id/tv_id"
                app:layout_constraintStart_toStartOf="@id/tv_id"
                />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="비밀번호를 입력하세요"
                android:layout_marginHorizontal="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pw"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="80dp"
                android:text="NAME"
                android:textSize="20sp"

                app:layout_constraintTop_toBottomOf="@id/tv_pw"
                app:layout_constraintStart_toStartOf="@id/tv_pw"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="이름을 입력하세요"
                android:layout_marginHorizontal="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                />

            <TextView
                android:id="@+id/tv_hobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="80dp"
                android:text="HOBBY"
                android:textSize="20sp"

                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                />

            <EditText
                android:id="@+id/et_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="취미를 입력하세요"
                android:text=""
                android:layout_marginHorizontal="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hobby"
                />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                app:layout_constraintTop_toBottomOf="@id/et_hobby"

                android:text="회원가입 완료"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>